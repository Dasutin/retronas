[Unit]
Description=ADTPro %i
StartLimitIntervalSec=60
StartLimitBurst=4

[Service]
User={{ retronas_user }}
WorkingDirectory=/opt/adtpro/
ExecStart=/opt/adtpro/adtpro.sh headless %i
Restart=on-failure
RestartSec=2
SuccessExitStatus=3 4
RestartForceExitStatus=3 4

[Install]
WantedBy=multi-user.target
