[Unit]
Description=EtherDFS lightweight file server for MS-DOS
After=network.target
StartLimitIntervalSec=60
StartLimitBurst=4

[Service]
Umask=0000
User={{ retronas_user }}
ExecStart={{ retronas_root }}/bin/ethersrv-linux -f {{ ansible_default_ipv4.interface }} {{ retronas_path}}/dos
Restart=on-failure
RestartSec=1
SuccessExitStatus=3 4
RestartForceExitStatus=3 4

[Install]
WantedBy=multi-user.target
