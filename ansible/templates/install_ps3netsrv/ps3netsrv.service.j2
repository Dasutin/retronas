[Unit]
Description=ps3netsrv for PlayStation3 with CFW/HEN and webMAN-MOD
After=network.target
StartLimitIntervalSec=60
StartLimitBurst=4

[Service]
User={{ retronas_user }}
ExecStart={{ retronas_root }}/bin/ps3netsrv {{ retronas_path }}/ps3/ps3netsrv
Restart=on-failure
RestartSec=1
SuccessExitStatus=3 4
RestartForceExitStatus=3 4

[Install]
WantedBy=multi-user.target
