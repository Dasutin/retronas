[Unit]
Description=tcpser %i
After=network.target
StartLimitIntervalSec=60
StartLimitBurst=4

[Service]
EnvironmentFile={{ retronas_root }}/etc/tcpser/tcpser-%i
ExecStart={{ retronas_root }}/bin/tcpser ${DEVICE} ${SPEED} ${LISTEN} ${ADDN}
Restart=on-failure
RestartSec=1
SuccessExitStatus=3 4
RestartForceExitStatus=3 4

[Install]
WantedBy=multi-user.target
