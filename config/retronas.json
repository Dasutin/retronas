        "hdparm": 
        {
            "title": "hdparm",
            "desc": "\n\nWARNING: These changes are irreversable, USE AT YOUR OWN RISK\n\nTry in ORDER:\nAPM -> Standby -> Custom service !! LAST RESORT !! <-\n\nThe custom service reads a random sector from the drive at random intervals every 3-5m, this should be enough to keep the drive up and reduce any impact on the drive.",
            "items": [
                {
                    "index": "01",
                    "title": "Back",
                    "description": "Return to previous menu", 
                    "command": "exit 0"
                },
                {
                    "index":"02",
                    "title": "Install",
                    "description": "Install the hdparm application",
                    "command": "CLEAR;RN_INSTALL_DEPS;RN_INSTALL_EXECUTE install_${SERVICE}.yml;PAUSE"
                },
                {
                    "index":"10",
                    "title": "APM",
                    "description": "Disable Advanced Power Management (APM)",
                    "command": " CLEAR;DRIVE=$(SELECT_DRIVE \"Disable APM\");hdparm -B 255 $DRIVE;PAUSE"
                },
                {
                    "index":"11",
                    "title": "Standby",
                    "description": "Disable drive Standy",
                    "command": "RN_SYSTEMD ${SERVICE}* \"reset-failed\";RN_SYSTEMD_START ${SERVICE}.timer"
                },
                {
                    "index":"20",
                    "title": "Start",
                    "description": "Start hdparm service",
                    "command": "TOOL COMMAND"
                },
                {
                    "index":"21",
                    "title": "Status",
                    "description": "Query hdparm service status",
                    "command": "RN_SYSTEMD_STATUS ${SERVICE}*"
                },
                {
                    "index":"22",
                    "title": "Stop",
                    "description": "Stop the hdparm service",
                    "command": "RN_SYSTEMD_STOP ${SERVICE}.timer;RN_SYSTEMD_STOP ${SERVICE}.service"
                }
            ]
        },
